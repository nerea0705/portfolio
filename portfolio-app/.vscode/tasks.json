  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng: serve",
      "type": "shell",
      "command": "ng",
      "args": ["serve"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "ng: build",
      "type": "shell",
      "command": "ng",
      "args": ["build"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "ng: test",
      "type": "shell",
      "command": "ng",
      "args": ["test"],
      "group": "test",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "npm: install",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
